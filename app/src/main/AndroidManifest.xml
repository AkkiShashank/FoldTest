<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.mandap.foldtest">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.UnfoldableDetailsActivity"
            android:label="Unfoldable details" />

        <activity
            android:name=".activities.FoldableListActivity"
            android:label="Foldable list" />
        <activity
            android:name=".activities.FoldableDetails"
            android:label="Foldable details" />

    </application>

</manifest>
